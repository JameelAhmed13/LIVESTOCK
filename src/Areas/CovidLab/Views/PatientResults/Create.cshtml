@model LIVESTOCK.Areas.CovidLab.Models.PatientResults

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>PatientResults</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <select asp-for="PatientID" class ="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DOR" class="control-label"></label>
                <input asp-for="DOR" class="form-control" />
