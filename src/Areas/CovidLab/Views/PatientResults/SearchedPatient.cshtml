@model IEnumerable<LIVESTOCK.Areas.CovidLab.Models.Patient>



<table class="table table-striped table-bordered  dataTables-example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                <text>Father/Husband</text>
            </th>
            <th>
                <text>Mobile No</text>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                <text>CNIC</text>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                <text>Lab Result</text>
            </th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherHusbandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profession)
            </td>
            <td>
                @{
                    if (item.Status == 0)
                    {
                        <span style="color:white;background-color:cornflowerblue;padding:5px">Pending</span>
                    }
                    else if (item.Status == 1)
                    {
                        <span style='Color:white;background-color:lightseagreen;padding:5px'>Negitive</span>
                    }
                    else
                    {
                        <span style='Color:white;background-color:crimson;padding:5px'>Positive</span>
                    }
                }                
            </td>
            <td>                
                <a asp-action="Details" asp-controller="Patients" asp-route-id="@item.PatientID">Details</a>               
            </td>
        </tr>
        }
    </tbody>
</table>

<script src="~/libs/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/libs/datatables/js/dataTables.bootstrap.min.js"></script>
